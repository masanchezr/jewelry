<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xmlns='http://dozer.sourceforge.net'
	xsi:schemaLocation='http://dozer.sourceforge.net 
                   http://dozer.sourceforge.net/schema/beanmapping.xsd'>
	<mapping>
		<class-a>com.je.services.sales.Sale</class-a>
		<class-b>com.je.dbaccess.entities.SaleEntity</class-b>
		<field custom-converter="com.je.services.converters.StringToDateConverter">
			<a>saledate</a>
			<b>creationdate</b>
		</field>
	</mapping>
	<mapping>
		<class-a>com.je.services.shoppings.Shopping</class-a>
		<class-b>com.je.dbaccess.entities.ShoppingEntity</class-b>
		<field custom-converter="com.je.services.converters.StringToDateConverter">
			<a>creationdate</a>
			<b>creationdate</b>
		</field>
	</mapping>
	<mapping>
		<class-a>com.je.services.pawns.NewPawn</class-a>
		<class-b>com.je.dbaccess.entities.PawnEntity</class-b>
		<field custom-converter="com.je.services.converters.StringToDateConverter">
			<a>creationdate</a>
			<b>creationdate</b>
		</field>
	</mapping>
	<mapping trim-strings="true">
		<class-a>com.je.services.pawns.NewPawn</class-a>
		<class-b>com.je.dbaccess.entities.ClientPawnEntity</class-b>
		<field custom-converter="com.je.services.converters.StringToDateConverter">
			<a>datebirth</a>
			<b>datebirth</b>
		</field>
	</mapping>
	<mapping>
		<class-a>com.je.services.holidays.Holiday</class-a>
		<class-b>com.je.dbaccess.entities.HolidayEntity</class-b>
		<field custom-converter="com.je.services.converters.StringToDateConverter">
			<a>holiday</a>
			<b>holiday</b>
		</field>
	</mapping>
	<mapping>
		<class-a>com.je.services.incidents.Incident</class-a>
		<class-b>com.je.dbaccess.entities.IncidentEntity</class-b>
		<field>
			<a>user</a>
			<b>username.username</b>
		</field>
	</mapping>
	<mapping>
		<class-a>com.je.services.sales.SalePostPoned</class-a>
		<class-b>com.je.dbaccess.entities.SalePostponedEntity</class-b>
		<field>
			<a>idsale</a>
			<b>idsalepostponed</b>
		</field>
		<field>
			<a>total</a>
			<b>totalamount</b>
		</field>
	</mapping>
</mappings>